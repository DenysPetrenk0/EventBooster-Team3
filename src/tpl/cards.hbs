{{#each this}}
  <li class='card' data-index={{id}}>
    <img class='pics' src={{imgUrl.url}} alt='event image' />
    <h2 class='card__title'>{{name}}</h2>
    <p class='card__date'>{{dates.start.localDate}}</p>
    <p class='card__location'>
      <svg class='card__location-icon' width='7' height='10'>
        <use href='../images/svg/search.svg#icon-search'></use>
      </svg>
{{locationRef}}
    </p>
  <div class="cat__meta">
    <h3 class="cat_title">{{dates.timezone}}</h3>
    <p class="cat__meta__text">{{info}}</p>
  </div>
  </li>
{{/each}}
